### 1. 회원 주문 생성 (POST /api/orders)
POST http://localhost:8080/api/orders
Content-Type: application/json

{
  "userId": 1001,
  "orderItems": [
    {
      "bookId": 201,
      "quantity": 2, // 수량 (int 타입, byte로 변환됨)
      "wrappingPaperId": 50,
      "isWrapped": true
    },
    {
      "bookId": 205,
      "quantity": 1,
      "wrappingPaperId": null,
      "isWrapped": false
    }
  ],
  "deliveryAddressInfo": {
    "deliveryAddress": "서울특별시 강남구 테헤란로",
    "deliveryAddressDetail": "NHN 아카데미 6층",
    "deliveryMessage": "문 앞에 두고 연락 주세요.",
    "recipient": "홍길동",
    "recipientPhoneNumber": "01012345678"
  },
  "couponDiscountAmount": 5000, // 쿠폰 할인 금액
  "pointDiscountAmount": 1000 // 포인트 사용 금액
}

